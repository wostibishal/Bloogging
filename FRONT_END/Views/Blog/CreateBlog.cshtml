@model Domain.Entity.Blogging

@{
    ViewData["Title"] = "CreateBlog";
    Layout = "_Layout";
}

<h1 class="text-xl mt-12 font-bold mb-4">Create Blog</h1>
<form id="CreateBlog-form" asp-action="CreateBlog" asp-controller="Blog" enctype="multipart/form-data" class="max-w-xl mx-auto" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-4">
        <label for="title" class="block text-gray-700 font-bold mb-2">Blog Title</label>
        <input asp-for="BlogTitle" id="title" name="BlogTitle" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Enter blog title">
        <span asp-validation-for="BlogTitle" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label for="content" class="block text-gray-700 font-bold mb-2">Blog Content</label>
        <textarea asp-for="BlogContent" id="content" name="BlogContent" rows="5" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" placeholder="Enter blog content"></textarea>
        <span asp-validation-for="BlogContent" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label for="ImageFile" class="block text-gray-700 font-bold mb-2">Image</label>
        <input type="file" id="image" name="ImageFile" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500">
        <span asp-validation-for="ImageName" class="text-danger"></span>
    </div>
    <div class="flex justify-end">
        <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded-md hover:bg-blue-600">Add Blog</button>
    </div>
</form>

<div>
    <a href="@Url.Action("Index", "Blog")">Back to List</a>
</div>


